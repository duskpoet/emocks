{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
